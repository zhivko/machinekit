component myrand;

pin out float out;
pin in float value;
pin in float amplitude;
pin in float timeDelta;

function _ nofp;

description """
Experimental rand function
""";
license "GPL"; // indicates GPL v2 or later
;;

#include <unistd.h>

float angle;

FUNCTION(_) {
	//printf("%d")
	//out = drand48();
	if(angle>=360.0)
		angle=0;
	angle = angle + timeDelta;
	
	out = value + amplitude * sin(angle);

	return 0;
}

